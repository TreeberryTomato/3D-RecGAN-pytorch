{
    "name": "3DRecGAN",
    "n_gpu": "1,2",
    "arch": {
        "type": "RecGAN",
        "args": {}
    },
    "data_loader": {
        "type": "train_original_3DRecGAN",
        "args":{
            "data_dir": "data/",
            "batch_size": 5,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "test_data_loader": {
        "type": "test_original_3DRecGAN",
        "args":{
            "data_dir": "data/",
            "batch_size": 2,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max loss",
        "early_stop": 4,

        "tensorboard": true
    }
}
